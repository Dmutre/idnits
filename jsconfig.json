{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "lib/**/*",
    "cli.js"
  ]
}
